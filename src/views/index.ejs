<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Task</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/cosmo/bootstrap.min.css">

</head>
<body>
    <div class="container">
        <h1>Task</h1>

        <form action="/add" method="post">
            <legend>
                Add a task
            </legend>
            <div class="form-group">
                <input type="text" id="title" class="form-control" name="tittle" placeholder="Add task...">
            </div>
            <div class="form-group">
                <textarea class="form-control" name="description" id="" cols="50" rows="2" placeholder="Add a Description..."></textarea>
            </div>
            <button class="btn btn-primary"> Add </button>

        </form>
        <hr>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Number</th>
                    <th>Tittle</th>
                    <th>Descriptions</th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody>
                <% for (var i = 0; i < task.length; i++) {%>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td>
                            <strong>
                                <%= task[i].tittle %>
                            </strong>
                        </td>
                        <td>
                                <%= task[i].description %>
                        </td>
                        <td>
                            <a class="<%= task[i].status ? 'btn btn-success': 'btn btn-dark' %>" 
                                href="/turn/<%= task[i]._id %>">Done</a>
                            <a id="delete" class="btn btn-danger" href="/delete/<%= task[i]._id %>">Delete</a>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>        
    </div>

    <script>
        document.getElementById('title').focus();
        document.getElementById('delete')
        .addEventListener('click', function (e){
            let response = confirm('are you sure to delete this task?');
            if (!response) {
                e.preventDefault();
            }
        });
    </script>
</body>
</html>